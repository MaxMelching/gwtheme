\usepackage{heuristica}
\usefonttheme{serif}

\usepackage[notext, onlyrm, widermath, noamsmath, notextcomp]{kpfonts}
\renewcommand{\rmdefault}{ptm} % ptm for times -> does this have an effect?


% -- General Settings ----------
\setbeamerfont{title}{family=\rmfamily,size=\Huge}
\setbeamerfont{author}{size=\Large}

\setbeamerfont{frametitle}{family=\rmfamily,series=\mdseries,size=\LARGE}
\setbeamerfont{framesubtitle}{family=\rmfamily,series=\mdseries,size=\Large}
\setbeamerfont{block title}{family=\rmfamily,series=\bfseries,size=\large}

\setbeamerfont{author in head/foot}{family=\sffamily,series=\bfseries,size=\footnotesize}
\setbeamerfont{framenumber in head/foot}{family=\sffamily,series=\bfseries,size=\footnotesize}
