\RequirePackage{xcolor}

\definecolor{MPIGreen}{HTML}{007977}
\definecolor{MPIGravRed}{HTML}{ad0000}
\definecolor{FontColor}{HTML}{003262}  % Taken from Berkeley theme (BerkeleyBlue)
% \definecolor{FontColor}{HTML}{29485d}  % Background color from official Max Planck Powerpoint templates

\setbeamercolor{titlelike}{fg=MPIGravRed,bg=MPIGravRed!36}
\setbeamercolor{headline}{fg=MPIGravRed,bg=MPIGravRed!36}
\setbeamercolor{footline}{fg=white,bg=}
\setbeamercolor{background}{fg=MPIGravRed!96,bg=white}

\setbeamercolor{normal text}{fg=FontColor}
\setbeamercolor{structure}{fg=FontColor}
\setbeamercolor{block title}{fg=MPIGravRed,bg=MPIGravRed!20}
% \setbeamercolor{block body}{fg=black,bg=MPIGravRed!20}
\setbeamercolor{block body}{fg=black,bg=gray!20}

\setbeamercolor{itemize item}{fg=MPIGravRed}
\setbeamercolor{itemize subitem}{fg=MPIGravRed}
\setbeamercolor{itemize subsubitem}{fg=MPIGravRed}

\setbeamercolor{section page}{fg=MPIGravRed, bg=MPIGravRed!36}
\setbeamercolor{subsection page}{fg=MPIGravRed, bg=MPIGravRed!36}
