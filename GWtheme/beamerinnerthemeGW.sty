\titlegraphic{
  \begin{beamercolorbox}[center]{titlegraphic}%
      \begin{minipage}{\themeGW@logoboxwidth}%
        \tikz[overlay, remember picture]{\node (0,0) {};}  % Just need to make it non-empty
      \end{minipage}%
      \begin{minipage}{\themeGW@logoboxwidth}%
        \tikz[overlay, remember picture]{\node (0,0) {};}  % Just need to make it non-empty
      \end{minipage}%
