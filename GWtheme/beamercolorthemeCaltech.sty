\RequirePackage{xcolor}

% -- General Caltech colors ---------------------------------------------------
% -- Source: https://identity.caltech.edu/colors
\definecolor{CaltechOrange}{HTML}{FF6C0C}
\definecolor{CaltechDarkBlue}{HTML}{003B4C}
\definecolor{CaltechDarkGreen}{HTML}{005851}
\definecolor{CaltechDarkPurple}{HTML}{644B78}
\definecolor{CaltechDarkRed}{HTML}{7A303F}
\definecolor{CaltechDarkGrey}{HTML}{76777B}
\definecolor{CaltechLightGrey}{HTML}{C8C8C8}
\definecolor{CaltechYellowGrey}{HTML}{AAA99F}
\definecolor{CaltechGreenGrey}{HTML}{849895}
\definecolor{FontColor}{HTML}{003262}


% -- Actual theme definition --------------------------------------------------
\setbeamercolor{titlelike}{fg=CaltechOrange,bg=CaltechOrange!36}
\setbeamercolor{headline}{fg=CaltechOrange,bg=CaltechOrange!36}
\setbeamercolor{footline}{fg=white,bg=}
\setbeamercolor{background}{fg=CaltechDarkBlue,bg=white}
% \setbeamercolor{title page}{fg=CaltechDarkGreen,bg=CaltechDarkGreen!36}
\setbeamercolor{title page}{fg=CaltechDarkBlue,bg=CaltechDarkBlue!36}

\setbeamercolor{normal text}{fg=FontColor}
\setbeamercolor{structure}{fg=FontColor}
% \setbeamercolor{block title}{fg=CaltechOrange,bg=CaltechOrange!10}
\setbeamercolor{block title}{fg=CaltechOrange,bg=CaltechOrange!20}
\setbeamercolor{block body}{fg=black,bg=gray!10}

\setbeamercolor{itemize item}{fg=CaltechDarkGreen}
\setbeamercolor{itemize subitem}{fg=CaltechDarkGreen}
\setbeamercolor{itemize subsubitem}{fg=CaltechDarkGreen}

\setbeamercolor{section page}{fg=CaltechOrange, bg=CaltechOrange!42}
\setbeamercolor{subsection page}{fg=CaltechOrange, bg=CaltechOrange!42}
